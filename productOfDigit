public class ProductOfDigit {
    public static void main(String[] args) {
         int ans = The_productOfDigit(123);
        System.out.println(ans);
    }
    static int The_productOfDigit(int n){
        if(n%10==n){
            return n;
        }
        return (n%10) + The_productOfDigit(n/10);
    }
}
